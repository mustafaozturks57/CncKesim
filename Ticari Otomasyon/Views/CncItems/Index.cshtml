@model IEnumerable<Ticari_Otomasyon.Models.CncModel.Item>

@{
    ViewBag.Title = "Index";
}
 
<br />
<br />
<br />
<br />
<p>
    <a href="/CncItems/Create" class="btn btn-success">Yeni Stok Oluştur</a>
</p>
<table class="table">
    <tr style="background-color:darkseagreen;color:white">
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BARKOD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URUNADI)
        </th>
        
       
        <th>
            @Html.DisplayNameFor(model => model.BIRIM)
        </th>
    
        <th>
            @Html.DisplayNameFor(model => model.KDV)
        </th>
   
        <th>
            @Html.DisplayNameFor(model => model.STOK_TAKIP)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BARKOD)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.URUNADI)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BIRIM)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.KDV)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.STOK_DURUMU)
    </td>




    <td>
        <a href="/CncItems/Edit/@item.ID" class="btn btn-success">Düzenle</a>
        <a href="/CncItems/Delete/@item.ID" class="btn btn-danger">Sil</a>
    </td>
</tr>
}

</table>
