<script>
    function PaletNoGiris() {

        var sipno = $("#sipno").val()  
        var paletno = $("#paletno").val()
        var data = JSON.stringify({
            sipno: sipno,
            paletno: paletno

            })

        $.ajax({
            type: "POST",
            url: '/CncPalet/PaletOnay',
