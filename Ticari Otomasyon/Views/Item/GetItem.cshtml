
@model Ticari_Otomasyon.Models.Classes.GetItem
@{
    Layout = null;
}

<style>
    body {
        background: rgb(255, 255, 255)
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #BA68C8
    }

    .profile-button {
        background: rgb(99, 39, 120);
        box-shadow: none;
        border: none
    }

        .profile-button:hover {
            background: #682773
        }

        .profile-button:focus {
            background: #682773;
            box-shadow: none
        }

        .profile-button:active {
            background: #682773;
            box-shadow: none
        }

    .back:hover {
        color: #682773;
        cursor: pointer
    }

    .labels {
        font-size: 11px
    }

    .add-experience:hover {
        background: #BA68C8;
        color: #fff;
        cursor: pointer;
        border: solid 1px #BA68C8
    }
</style>
<div class="container rounded bg-white mt-2 mb-2">
    <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle mt-5" width="150px" src="~/Images/item-box-icon.png">
                    <span class="font-weight-bold" style="margin-top:10px">@Model.Code</span>
                    <span class="text-black-50">@Model.ItemName</span><span> </span>
                </div>
            </div>
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Malzeme Bilgileri</h4>
                    </div>


                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Malzeme Açıklaması 2</label><input type="text" class="form-control" value="@Model.ItemName2" placeholder="" disabled></div>

                        <div class="col-md-6"><label class="labels">Anabirim</label><input class="form-control" placeholder="" value="@Model.MainUnit" disabled></div>

                    </div>
                    <br />
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Kdv Bilgileri</h4>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6"><label class="labels">Satış</label><input type="text" class="form-control" placeholder="" value="@Model.Vat" disabled></div>

                        <div class="col-md-6"><label class="labels">Satınalma</label><input type="text" class="form-control" placeholder="" value="@Model.SellVat" disabled></div>

                        <div class="col-md-6"><label class="labels">İade</label><input type="text" class="form-control" placeholder="" value="@Model.ReturnVat" disabled></div>
                    </div>

                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center experience">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Özel Bilgiler</h4>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Özel Kod</label><input type="text" class="form-control" placeholder="" value="@Model.SpecialCode" disabled></div>
                        <div class="col-md-6"><label class="labels">Yetki Kodu</label><input type="text" class="form-control" value="@Model.CyphCode" placeholder="" disabled></div>
                        <div class="col-md-12"><label class="labels">Üretici Kodu</label><input type="text" class="form-control" value="@Model.ProducerCode" placeholder="" disabled></div>
                    </div>
                    <br />
